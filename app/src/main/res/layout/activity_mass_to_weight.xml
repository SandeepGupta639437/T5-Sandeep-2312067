<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KgToGram"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert Mass to Weight"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#E80707"/>

    <EditText
        android:id="@+id/MassText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:text="Mass" />

    <Button
        android:id="@+id/buttonMassToWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#021887"
        android:textColor="@color/white"
        android:text="Convert To Weight" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Result"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/kgtolbs"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/HourToSecond"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/CelciusToKelvin"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/back"/>
    </LinearLayout>
</LinearLayout>